.weui-search-bar{
  position:relative;
  padding:8px;
  display:flex;
  margin-top: 10px;
  box-sizing:border-box;
  background-color:#EDEDED;
  -webkit-text-size-adjust:100%;
  align-items:center
}
.weui-icon-search{
  padding-top: 4px;
  margin-left: 8px;
  margin-right:8px;
  font-size:10px;
  vertical-align: top;
  margin-top:.64em;
  height:2em;
  line-height:2em
}
.weui-icon-search_in-box{
  position:absolute;
  left:12px;
  top:50%;
  margin-top:-8px
}
.weui-search-bar__text{
  display:inline-block;
  font-size:14px;
  vertical-align:top;
  line-height:40px
}
.weui-search-bar__form{
  position:relative;
  flex:auto;
  background:#FFFFFF;
  height:40px;
}
.weui-search-bar__box{
  position:relative;
  padding-left:32px;
  padding-right:32px;
  width:100%;
  box-sizing:border-box;
  z-index:1
}
.weui-search-bar__input{
  height:40px;
  line-height:32px;
  font-size:14px;
  caret-color:#07C160
}
.weui-icon-clear{
  position:absolute;
  top:0;
  right:0;
  bottom:0;
  padding:0 12px;
  font-size:0
}
.weui-icon-clear:after{
  content:"";
  height:100%;
  vertical-align:middle;
  display:inline-block;
  width:0;
  overflow:hidden
}
.weui-search-bar__label{
  position:absolute;
  top:0;
  right:0;
  bottom:0;
  left:0;
  z-index:2;
  color:rgba(0,0,0,0.5);
  background:#FFFFFF;
  height: 40px;
  line-height:32px
}
.weui-search-bar__cancel-btn{
  margin-left:8px;
  line-height:32px;
  color:#576B95;
  white-space:nowrap
}