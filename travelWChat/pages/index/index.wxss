page{
  min-height: 100%;
}
/**音乐播放器图标动画设置*/
.rotateAn{
  animation: rotate 3s linear infinite;
  display: block;
  width: 36px;
  height: 36px;
  margin-top: -540px;
  margin-left: 44px;
  z-index: 9999;
}
.static{
  display: block;
  width: 36px;
  height: 36px;
  z-index: 9999;
  position: absolute;
  top: 130px;
  left: 44px;
}
@keyframes rotate{
  from{transform: rotate(0deg);}
  to{transform: rotate(360deg);}
}
.content{
  width: 100%;
  height: 100vh;
}
.animate-image{
  position: absolute;
  top: 0;
  height: 100%;
  width: 100%;
}
