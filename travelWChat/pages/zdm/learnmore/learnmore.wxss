/* pages/zdm/learnmore/learnmore.wxss */
@import "../../third/weui.wxss";
page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}
swiper{
  width: 100%;
  height: 180px;
}
.demo-text-1{
  position: relative;
  align-items: center;
  justify-content: center;
  background-color: #1AAD19;
  color: #FFFFFF;
  font-size: 36rpx;
}
.demo-text-1:before{
  content: 'A';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.demo-text-2{
  position: relative;
  align-items: center;
  justify-content: center;
  background-color: #2782D7;
  color: #FFFFFF;
  font-size: 36rpx;
}
.demo-text-2:before{
  content: 'B';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.demo-text-3{
  position: relative;
  align-items: center;
  justify-content: center;
  background-color: #F1F1F1;
  color: #353535;
  font-size: 36rpx;
}
.demo-text-3:before{
  content: 'C';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

button{
  margin-bottom: 30rpx;
}
button:last-child{
  margin-bottom: 0;
}
.page-section-title{
  padding: 0;
}
.swiper-item{
  display: block;
  height: 180px;
}
.name-title{
  display: block;
  font-size: 24px;
  font-weight: 800;
  margin-left: 20px;
  margin-top: 10px;
}
.small-name-title{
  display: block;
  font-size:20px;
  font-weight: 700;
  margin-left: 24px;
  margin-top: 8px;
}
.title{
  margin-left: 5%;
  margin-right: 5%;
  font-size: 16px;
  color: #333;
  /* 以下四行实现收缩功能 */
}
.content{
  display: -webkit-box;
  -webkit-box-orient:vertical;
  text-overflow: ellipsis;
  overflow:hidden; 
  /* 最多显示3行 */
  -webkit-line-clamp:3;
}
.content1{
  /* 全部显示 */
  display: -webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:0; 
}
button{
  position: relative;
  display: block;
  padding-left: 1px;
  padding-right: 1px;
  box-sizing: border-box;
  font-size: 14px;
  font-weight: 1000;
  text-align: center;
  text-decoration: none;
  line-height: 2;
  border-radius: 4px;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  cursor: pointer;
  color: #000;
  background-color: #f8f8f8;
  width: 40px;
  top: -20px;
  left: 150px;
}
button::after{
  border: none;
}
.image-box{
  height: 130px;
}
.iamge-one{
  display: block;
  width: 184px;
  height: 130px;
}
.learn-more-image{
  width: 60px;
  height: 20px;
  font-size: 10px;
  margin-left: -24px;
  margin-top: -2px;
  background-color: transparent;
  box-shadow: 0 0 3px 2px #ededed;
}
.second-swiper-image{
  display: block;
  width: 100%;
  height: 200px;
}
.image-only-one{
  display: block;
  width: 375px;
  height: 200px;
}
.image-only-one-box{
  display: block;
  width: 375px;
  height: 200px;
}
.learn-only-more-image{
  width: 60px;
  height: 20px;
  font-size: 10px;
  margin-left: 154px;
  margin-top: -6px;
  background-color: transparent;
  box-shadow: 0 0 3px 2px #ededed;
  color: #FFFFFF;
}